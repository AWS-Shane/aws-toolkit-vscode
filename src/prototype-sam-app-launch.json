    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            // "preLaunchTask": "mytask",
            "address": "localhost",
            "port": 5858,
            "localRoot": "${workspaceFolder}/ux-demp-app/hello-world", // This is the workspace relative location of the folder referenced by your Serverless Application template resource's CodeUri
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "skipFiles": [
                "/var/runtime/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug nodejs Lambda from SAM Template",
            "preLaunchTask": "mytask",
            "address": "localhost",
            "port": 5858,
            "localRoot": "${workspaceFolder}/ux-demp-app/hello-world", // This is the workspace relative location of the folder referenced by your Serverless Application template resource's CodeUri
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "skipFiles": [
                "/var/runtime/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            // "program": "${workspaceFolder}/ux-demp-app/hello-world/app.js",
            // "cwd": "${workspaceFolder}",
            "args": [
                "${input:initDebug}" // hack point: init/set up the debug settings
            ]
        }
    ],
    "inputs": [
        {
            "id": "initDebug",
            "type": "command",
            "command": "aws.prototype.prepare.debug.session",
            "args": {
                "launchType": "node"
            },
        }
    ]
}